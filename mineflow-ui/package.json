{
  "name": "mineflow-ui",
  "version": "1.0.0",
  "description": "Desktop UI for MineFlow ultimate pit limit calculation",
  "main": "dist-electron/main.js",
  "author": "MineFlow Team",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"vite\" \"wait-on http://localhost:5173 && npm run electron:start\"",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:compile": "tsc -p tsconfig.electron.json",
    "electron:start": "npm run electron:compile && NODE_ENV=development electron .",
    "start": "npm run dev:electron",
    "pack": "npm run build && npm run electron:compile && electron-builder --dir",
    "dist": "npm run build && npm run electron:compile && electron-builder"
  },
  "dependencies": {
    "@react-three/drei": "^9.117.3",
    "@react-three/fiber": "^8.17.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "three": "^0.171.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.6.3",
    "vite": "^6.0.1",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.mineflow.ui",
    "productName": "MineFlow UI",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "extraResources": [
      {
        "from": "../build/bin/",
        "to": "bin/",
        "filter": ["mineflow", "mineflow.exe"]
      },
      {
        "from": "../data/",
        "to": "data/",
        "filter": ["*.dat"]
      }
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
